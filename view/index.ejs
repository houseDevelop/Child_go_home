<%- include('templates/header',{tituloweb:titulo,value:status})%>
  <style>
    .login-container {    
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 60vh; /* Establece la altura al 100% de la altura de la ventana */
    }

    /* Estilos para el formulario de inicio de sesión */
    .login-form {
      text-align: center;
      /* Texto centrado en el formulario */
    }

    /* Modifica el cuerpo */
    body {
      background-image: url('images/recursos/fondo2.jpg');
      /* Es para elegir el fondo */
      margin: 0;
      padding: 0;
    }
    html, body {
      height: 100%;
    }
  </style>
    <div class="login-container">
      <form method="POST" class="login-form" action="/login">
        <h3 class="mb-3">ACCESO AL SISTEMA</h3>
        <div class="form-group">
          <label for="nombre_usuario">Usuario</label>
          <input type="text" class="form-control" id="nombre_usuario" name="userName" placeholder="Usuario" required>
        </div>
        <div class="form-group">
          <label for="clave">Contraseña</label>
          <input type="password" class="form-control" id="clave" name="psw" placeholder="Password" required>
        </div><br>
        <input type="submit" class="btn btn-primary btn-block"></button>
      </form>
    </div>
  <%- include('templates/footer' ,{tituloweb:"Child go Home",value:1})%>